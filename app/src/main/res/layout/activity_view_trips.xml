<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pamoda_drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".TripManager.ViewTrips"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--creating a diffferent toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hash_dark_blue"
            android:id="@+id/pamo_toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp" />

        <!--        creating the frame layout-->
        <FrameLayout
            android:id="@+id/pamo_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!--    creation of the navigation view-->
    <!--    the navigation header and the navigation menu is passed below-->

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/pamo_nav_view"
        app:headerLayout="@layout/pamoda_nav_header"
        app:menu="@menu/pamoda_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>