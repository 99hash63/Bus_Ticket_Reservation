        android:background="@drawable/edit_text_boder"
        android:ems="10"
        android:hint="@string/pt3"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pt4"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:padding="10dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/edit_text_boder"
        android:ems="10"
        android:hint="@string/pt4"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/ic_baseline_airline_seat_recline_normal_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/im2_busowner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/im3_busowner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/im4_busowner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="79dp"
        android:background="@drawable/admin_rounded_btn"

        android:text="@string/btn3"
        android:textColor="@color/hash_light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="476dp"
        android:background="@drawable/admin_rounded_btn"
        android:backgroundTint="@color/hash_dark_blue"
        android:padding="10dp"
        android:text="@string/bt1"
        android:textColor="@color/hash_light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>